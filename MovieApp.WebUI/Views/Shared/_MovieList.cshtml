@model IEnumerable<Movie>

@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="~/img/@item.Image" alt="@item.Name">
            <div class="card-body">
                <p class="card-text">@item.Name</p>
            </div>
            <div class="card-footer text-muted">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                2 days ago
            </div>
        </div>
    </div>
}